<?xml version="1.0" encoding="UTF-8"?>
<configdata>
	<nav>
		<admin>
			<home>
				<label>Informace</label>
				<controller>user</controller>
				<action>dashboard</action>
				<pages>
					<texy>
						<label>Časté otázky - FAQ</label>
						<controller>user</controller>
						<action>faq</action>
					</texy>
					<dashboard>
						<label>Dashboard</label>
						<controller>user</controller>
						<action>dashboard</action>
					</dashboard>
				</pages>
			</home>
			<news>
				<label>Zprávičky</label>
				<uri>#</uri>
				<pages>
					<add-news>
						<label>Přidat zprávičku</label>
						<controller>news</controller>
						<action>add</action>
					</add-news>
					<list-news>
						<label>Seznam zpráviček</label>
						<controller>news</controller>
						<action>list</action>
					</list-news>
				</pages>
			</news>
			<!-- Sekce pro redaktory -->
			<redaktor>
				<label>Redaktor</label>
				<controller>editor</controller>
				<pages>
					<editor-add-article>
						<label>Vytvořit článek</label>
						<controller>article</controller>
						<action>add</action>
						<resource>editor</resource>
						<privilege>add-article</privilege>
					</editor-add-article>
					<editor-list-article>
						<label>Seznam článků</label>
						<controller>article</controller>
						<action>list</action>
						<resource>editor</resource>
						<privilege>list-articles</privilege>
					</editor-list-article>
					<separator>
						<label></label>
						<controller></controller>
						<class>divider</class>
					</separator>
					<image-tutorial>
						<label>Jak vložit obrázky?</label>
						<controller>user</controller>
						<action>images</action>
						<resource>user</resource>
						<privilege>images</privilege>
					</image-tutorial>					
					<request-photo>
						<label>Požádat o fotku</label>
						<controller>editor</controller>
						<action>request-photo</action>
						<resource>editor</resource>
						<privilege>request-photo</privilege>
					</request-photo>					
				</pages>
			</redaktor>
			<!-- // Sekce pro redaktory //-->
			<photographer>
				<label>Fotograf</label>
				<controller>photographer</controller>
				<pages>
					<add-gallery>
						<label>Nová galerie</label>
						<controller>photographer</controller>
						<action>add-gallery</action>
					</add-gallery>
					<list-gallery>
						<label>Seznam galerií</label>
						<controller>photographer</controller>
						<action>list-gallery</action>
					</list-gallery>					
				</pages>
			</photographer>
			<!--<corrector-home>
				<label>Korektor</label>
				<controller>corrector</controller>
				<action>index</action>
				<resource>corrector</resource>
				<privilege>index</privilege>
			</corrector-home>-->
			<control>
				<label>Kontrola</label>
				<controller>#</controller>
				<resource>corrector</resource>
				<pages>
					<corrector-list-article>
						<label>Články ke korektuře</label>
						<controller>corrector</controller>
						<action>list-articles</action>
						<resource>corrector</resource>
						<privilege>list-articles</privilege>
					</corrector-list-article>
					<chief-list-article>
						<label>Články ke kontrole</label>
						<controller>chief</controller>
						<action>list-articles</action>
						<resource>chief</resource>
						<privilege>list-articles</privilege>
					</chief-list-article>
					<chief-list-corrected>
						<label>Články k publikování</label>
						<controller>chief</controller>
						<action>list-corrected</action>
						<resource>chief</resource>
						<privilege>list-corrected</privilege>
					</chief-list-corrected>
				</pages>
			</control>
			<admin>
				<label>Administrace</label>
				<controller>#</controller>
				<resource>chief</resource>
				<pages>
					<article-list>
						<label>Všechny články</label>
						<controller>article</controller>
						<action>list</action>
						<params>
							<view-all>1</view-all>
						</params>
						<resource>chief</resource>
						<privilege>list</privilege>
					</article-list>
					<chief-list-article>
						<label>Články ke kontrole</label>
						<controller>chief</controller>
						<action>list-articles</action>
						<resource>chief</resource>
						<privilege>list-articles</privilege>
					</chief-list-article>
					<chief-list-corrected>
						<label>Články k publikování</label>
						<controller>chief</controller>
						<action>list-corrected</action>
						<resource>chief</resource>
						<privilege>list-corrected</privilege>
					</chief-list-corrected>					
					<!-- Admin -->
					<add-user>
						<label>Přidat uživatele</label>
						<controller>user</controller>
						<action>add</action>
						<resource>user</resource>
						<privilege>add</privilege>
					</add-user>
		
				</pages>
			</admin>

